@model HeroesArenaWebsite.Web.ViewModels.Forum.ForumTopicViewModel

<h1>Welcome to the @Model.Forum.Title forum</h1>

@if (Context.User.Identity.IsAuthenticated)
{
    <span id="headingBtn"><a asp-controller="Posts" asp-action="Create" asp-route-id="@Model.Forum.Id" class="btn btn-newPost">Create Post</a></span>
}

@if (@Model.Posts is null)
{
    <div class="noPosts">
        <h3>
            There are no posts in @Model.Forum.Title yet.  <br />
            Would you like to <a asp-controller="Posts" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>create</span>
            </a> the first one?

        </h3>
    </div>

}
else
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}